    <div class="row">
      <div class="col-md-4 form-ujian">
        <div class="col text-dark">
          <h2>Tambah Jurusan</h2>
        </div>
        <div class="col">
          <form action="/admin/tambah-jurusan?attribute=<%= selected %>" method="POST">
            <div class="mb-3">
              <%- include('./../partials/message.ejs') %>
            </div>
            <div class="mb-3">
              <label for="nama" class="form-label">Nama Jurusan</label>
              <div class="input-group">
                <input type="text" value="<%= valJurusan.nama %>" name="nama" class="form-control" id="nama" aria-describedby="NIS" />
              </div>
            </div>
            <div class="mb-3">
              <label for="Kode" class="form-label">Kode</label>
              <div class="input-group">
                <input type="text" value="<%= valJurusan.kode %>" name="kode" class="form-control" id="Kode" />
              </div>
            </div>

            <button type="submit" class="btn btn-primary form-control">Tambah</button>
          </form>
        </div>
      </div>
      <div class="col-md-8 mt-5 table-responsive text-center">
        <table class="table bg-red" style="vertical-align: middle">
          <thead style="background: #0d6efd; color: white">
            <tr style="white-space: nowrap;">
              <th>No</th>
              <th>Kode</th>
              <th>Jurusan</th>
              <th style="text-align: center; width: 7.5rem;">Aksi</th>
              <th class="close-selected"></th>
            </tr>
          </thead>
          <tbody class="body-list-jurusan" data-selected="<%= selected %>">
            <% let i = 1 %>
            <% if( selected != '' ) { %>
              <% data.forEach(x => { %>
                <tr>
                  <td><%= i++ %></td>
                  <td><%= x.kode %></td>
                  <td style="text-align: center;"><%= x.nama %></td>
                  <td style="text-align: center;">
                    <a class="btn btn-primary" href="/admin/tambah-jurusan?attribute=<%= x.kode.toLowerCase() %>" role="button"><i class='fas fa-pen'></i></a>
                    <a class="btn btn-danger del-jurusan" data-href="/admin/tambah-jurusan?attribute=<%= x.kode.toLowerCase() %>&del=jurusan" role="button"><i class='fas fa-trash-alt'></i></a>
                  </td>
                  <td class="close-selected" style="text-align: right;"></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
