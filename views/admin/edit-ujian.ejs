    <div class="container-fluid">
      <div class="row">
          <div class="col">
            <form action="/admin/ujian/edit?attribute=all&jadwal=<%= query.jadwal %>" method="post">
                <table class="table table-convert mt-5">
                    <thead class="" style="background-color: #0d6efd;; color: white">
                      <tr class="theadRole" style="white-space: nowrap;">
                        <th scope="col" style="width: 2.5%;">No</th>
                        <th scope="col" style="width: 2.5%;">Kode</th>
                        <th scope="col" style="width: 25%;">Soal</th>
                        <th scope="col" style="width: 5%;">Jawab</th>
                        <% alp.forEach(x => { %>
                            <th scope="col" style="width: 15%;"><%= x %></th>
                        <% }) %>
                      </tr>
                    </thead>
                    <tbody>
                        <% res.ujian.forEach(x => { %>
                            <tr>
                                <td><input required type="text" name="no" style="width: 100%;" id="no" value="<%= x.no %>"></td>
                                <td><input required type="text" name="kodeSoal" id="kodeSoal" style="width: 100%;" value="<%= x.kodeSoal %>"></td>
                                <td><textarea required name="soal" id="soal" style="width: 100%;"><%= x.soal %></textarea></td>
                                <td><input required type="text" name="jawab" id="jawab" style="width: 100%;" value="<%= x.jawab %>"></td>
                                <% alp.forEach(y => { %>
                                    <td><textarea required style="width: 100%;" name="<%= y %>" id="<%= y %>"><%= x[y] %></textarea></td>
                                <% }) %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <div class="col" style="padding: 5% 25%;">
                    <button type="submit" class="btn btn-primary" style="width: 100%;">Edit</button>
                </div>
            </form>
          </div>
